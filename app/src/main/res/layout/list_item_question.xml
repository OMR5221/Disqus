<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/list_item_question_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/list_item_isAnswered_checkBox"
        android:layout_toLeftOf="@+id/list_item_isAnswered_checkBox"
        android:textStyle="bold"
        android:padding="12dp"
        android:textSize="16dp"
        tools:text="Question Text"/>

    <CheckBox
        android:id="@+id/list_item_isAnswered_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="4dp"/>

</RelativeLayout>